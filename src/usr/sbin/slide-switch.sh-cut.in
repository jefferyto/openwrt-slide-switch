#

prefix=@prefix@
exec_prefix=@exec_prefix@
datarootdir=@datarootdir@

. "@datadir@/@PACKAGE_NAME@/functions.sh"

case $1 in
	init)
		# $2 optional: "force" to force init
		do_init "$2"
		;;
	button)
		# $2 required: button name from button event
		do_button "$2"
		;;
	boot)
		# $2 required: "enable" or "disable"
		do_boot "$2"
		;;
	-v|--version)
		do_version
		;;
	*)
		exit $ex_usage
		;;
esac
